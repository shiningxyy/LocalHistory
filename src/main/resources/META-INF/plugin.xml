<idea-plugin>
    <id>com.versionplugin.versioncontrol</id>
    <name>Version Control Tool</name>
    <version>1.0-SNAPSHOT</version>
    <vendor email="youremail@example.com" url="http://yourwebsite.com">Your Name</vendor>

    <!-- 插件的描述 -->
    <description>
        This plugin provides automatic and fine-grained version control for source code files, allowing users to view, track, and revert to previous versions.
    </description>

    <!-- 插件依赖 IntelliJ IDEA 版本 -->
    <depends>com.intellij.modules.platform</depends>




    <!-- 声明工具窗口 -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="VersionViewer" factoryClass="com.versionplugin.lh.VersionViewerToolWindowFactory" anchor="bottom" />
    </extensions>

    <!-- 声明启动活动 -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.versionplugin.lh.VersionManagerStartupActivity" />
    </extensions>

</idea-plugin>
