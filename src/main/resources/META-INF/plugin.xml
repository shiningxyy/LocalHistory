<idea-plugin>
    <id>com.versionplugin.versioncontrol</id>
    <name>Version Control Tool</name>
    <version>1.0-SNAPSHOT</version>
    <vendor email="youremail@example.com" url="http://yourwebsite.com">Your Name</vendor>

    <!-- 插件的描述 -->
    <description>
        This plugin provides automatic and fine-grained version control for source code files, allowing users to view, track, and revert to previous versions.
    </description>

    <!-- 插件依赖 IntelliJ IDEA 版本 -->
    <depends>com.intellij.modules.platform</depends>

    <!-- 插件的应用程序入口 -->
    <application-components>
        <component>
            <implementation-class>com.versionplugin.lh.MyPlugin</implementation-class>
        </component>
    </application-components>


    <!-- 注册一个工具窗口 -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Version Viewer"
                    factoryClass="com.versionplugin.lh.VersionViewer"
                    anchor="left"
                    icon="/icons/versionviewer.svg"/>
    </extensions>

</idea-plugin>
